{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NewsApi": {
    "BaseUrl": "https://hacker-news.firebaseio.com/v0/",
    "HandlerLifetimeInMin": 5,
    "TimeoutPolicyOn": true,
    "TimeoutInSec": 30,
    "RateLimitingOn": true,
    "RateLimitingNumberOfExecutions": 5,
    "RateLimitingTimeSpanInSec": 1,
    "RateLimitingMaxBurst": 10,
    "BulkHeadPolicyOn": true,
    "BulkHeadPolicyMaxParallelization": 10,
    "BulkHeadPolicyMaxQueuingActions": 20,
    "CircuitBreakerPolicyOn": true,
    "CircuitBreakerPolicyEventsAllowedBeforeBreaking": 5,
    "CircuitBreakerPolicyDurationOfBreakInSec": 30,
    "RetryPolicyOn": true,
    "RetryCount": 5,
    "RetryBackOffBase": 2,
    "RetryJitterOn": true
  },
  "BestStoriesConfiguration": {
    "CacheEnabled": true,
    "CacheTimeInMin": 15,
    "CacheKey": "BestStoriesCacheKey",
    "MaxDegreeOfParallelism": 5
  },
  "AllowedHosts": "*"
}
